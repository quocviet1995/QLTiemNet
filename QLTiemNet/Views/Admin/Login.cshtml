
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml";
}
<div class="row" ng-controller="LoginAdminCtrl">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                <form ng-submit="LoginAdmin()">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Account</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Account name" ng-model="user">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" ng-model="password">
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

