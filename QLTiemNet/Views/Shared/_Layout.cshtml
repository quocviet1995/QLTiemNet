@model IEnumerable<QLTiemNet.Models.Status>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/LibaryTheme/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/LibaryTheme/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/LibaryTheme/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Morris Charts CSS -->
    <link href="~/LibaryTheme/vendor/morrisjs/morris.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/LibaryTheme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <script src="~/Scripts/angular.js"></script>
    <script src="~/HandleScripts/Service/Angular.Service.js"></script>
    <script src="~/HandleScripts/Service/Login.Service.js"></script>
    <script src="~/HandleScripts/Login.Controller.js"></script>
    <script src="~/HandleScripts/Service/Home.Service.js"></script>
    <script src="~/HandleScripts/Home.Controller.js"></script>
    <script src="~/Scripts/sweetalert2.all.js"></script>
</head>
<body ng-app="myApp">
    <div id="wrapper" ng-controller="HomeCtrl">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; background-color:#87cefa; border-color:#87cefa">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a style="color:#ffffff; font-weight:bold" class="navbar-brand" href="../">User Home Page</a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                @if (Session["NameUser"] != null)
                {
                    <li>
                        <a href="#">
                            Time Remaining:{{TimeRemaining}}<i class="fa fa-clock-o fa-fw"></i>
                        </a>
                        <input type="hidden" id="UserId" value="@ViewBag.UserId" />
                    </li>
                    <li>
                        <a href="#" >
                            @ViewBag.NameUser <i class="fa fa-user fa-fw"></i>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout","Home")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>                   
                }
                else
                {
                    <li>
                        <a style="color:#ffffff; background-color:unset" href="@Url.Action("Login","Home")"><i class="fa fa-sign-in fa-fw"></i> Login </a>
                    </li>
                }
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li style="background-color:#36454f" class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <select class="form-control" ng-model="status">
                                    <option value="0">All Status</option>
                                    <option ng-repeat="value in AllStatus" value="{{value.Id}}">{{value.Name}}</option>                                  
                                </select>
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" ng-click="Search()">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a style="background-color:#36454f; color:#ffffff" href="#"><i class="fa fa-desktop fa-fw"></i> Detail Computer</a>
                            <div class="pull-left" style="border:solid 1px #36454f; width: 100%; background-color:#36454f; color:#ffffff; padding:15px">
                                <p>STT: <span ng-cloak>{{computerInformation.Id}}</span></p>
                                <p>Name: <span ng-cloak>{{computerInformation.Name}}</span></p>
                                <p>Status: <span ng-cloak>{{computerInformation.StatusName}}</span></p>
                                <p>User: <span ng-cloak>{{computerInformation.UserName}}</span></p>
                                <p>Time Active: <span ng-cloak>{{computerInformation.TimeActiveString}}</span></p>
                                <p>Time Start: <span ng-cloak>{{computerInformation.TimeStart.slice(6,19) | date:"MM-dd-yyyy h:mm:ssa"}}</span></p>
                                <p>Time End: <span ng-cloak>{{computerInformation.TimeEnd.slice(6,19) | date:"MM-dd-yyyy h:mm:ssa"}}</span></p>
                                <p>CPU: <span ng-cloak>{{computerInformation.Cpu}}</span></p>
                                <p>RAM: <span ng-cloak>{{computerInformation.Ram}}</span></p>
                                <p>Hard Disk: <span ng-cloak>{{computerInformation.HardDisk}}</span></p>
                                <p>Graphic: <span ng-cloak>{{computerInformation.Graphic}}</span></p>
                                <p>Monitor: <span ng-cloak>{{computerInformation.Monitor}}</span></p>
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Page</h1>
                </div>
                <div class="col-lg-12 container">
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/LibaryTheme/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/LibaryTheme/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/LibaryTheme/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/LibaryTheme/vendor/raphael/raphael.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/LibaryTheme/dist/js/sb-admin-2.js"></script>
</body>
</html>
