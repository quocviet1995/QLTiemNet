<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- MetisMenu CSS -->
    <link href="~/LibaryTheme/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/LibaryTheme/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Morris Charts CSS -->
    <link href="~/LibaryTheme/vendor/morrisjs/morris.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/LibaryTheme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <script src="~/Scripts/angular.js"></script>
    <script src="~/HandleScripts/Service/Angular.Service.js"></script>
    <script src="~/HandleScripts/Service/LoginAdmin.Service.js"></script>
    <script src="~/HandleScripts/LoginAdmin.Controller.js"></script>
    <script src="~/Scripts/sweetalert2.all.js"></script>
</head>
<body ng-app="myApp">
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; margin-top:-32px; background-color:#87cefa!important;padding: 30px 20px 17px 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding:0px !important; margin-left:80px; margin-top:-15px" href="Admin">
                <img src="~/Asserts/logo.png" width="90" height="60" /></a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <a  href="#">
                    @ViewBag.NameUser_Session <i class="fa fa-user fa-fw"></i> 
                </a>
                <a  href="Admin/Logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" style="background-color: #36454f!important" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard fa-fw"></i>Dashboard </a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Status")"><i class="fa fa-sun-o fa-fw"></i>Status </a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Users")"><i class="fa fa-user fa-fw"></i>Users </a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "ComputerDetails")"><i class="fa fa-desktop fa-fw"></i>Computer Details </aclass="sidebar-text"></a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Computers")"><i class="fa fa-desktop fa-fw"></i>Computers </a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Schedulers")"><i class="fa fa-table fa-fw"></i>Schedulers </a>
                        </li>
                        <li>
                            <a class="sidebar-text" href="@Url.Action("Index", "Bills")"><i class="fa fa-comment fa-fw"></i>Bills </a>
                        </li>
                        <!-- /.nav-second-level -->
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper" style="background-color: #f5f5f5">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Page</h1>
                </div>
                <div class="container">
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/LibaryTheme/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/LibaryTheme/vendor/raphael/raphael.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/LibaryTheme/dist/js/sb-admin-2.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
